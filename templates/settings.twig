	instructions: "Root path for all environments. (/var/www/domain.tld)"|t,
	value:        settings.envRoot,
	autofocus:    true,
	errors:       settings.getErrors('envRoot')
}) }}

{{ forms.textField({
	first:        true,
	label:        "Canonical Environment"|t,
